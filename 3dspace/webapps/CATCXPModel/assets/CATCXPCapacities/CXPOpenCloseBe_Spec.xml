    <Version>0.1</Version>
  </Header>

  <ExperienceObject>

    <CXPService id="open" fctStart="open" fctIsPlaying="isOpening" mode="task">
      <NaturalLanguageInfo capacityType="DriverTask" alias="open" icon="icons/caps/I_CXPDoorOpen.png" />
    </CXPService>

    <CXPService id="close" fctStart="close" fctIsPlaying="isClosing" mode="task">
      <NaturalLanguageInfo capacityType="DriverTask" alias="close" icon="icons/caps/I_CXPDoorClose.png" />
    </CXPService>

    <CXPService id="switch" fctStart="switch" fctIsPlaying="isSwitching" mode="task">
      <NaturalLanguageInfo capacityType="DriverTask" alias="switch" icon="icons/caps/I_CXPDoorSwitch.png" />
    </CXPService>

    <CXPFunction id="isOpened" body="isOpened" returnValue="Boolean">
      <NaturalLanguageInfo capacityType="SensorState" alias="is opened" icon="icons/caps/I_CXPDoorClose.png" />
    </CXPFunction>

    <CXPFunction id="isClosed" body="isClosed" returnValue="Boolean">
      <NaturalLanguageInfo capacityType="SensorState" alias="is closed" icon="icons/caps/I_CXPDoorOpen.png" />
    </CXPFunction>

  </ExperienceObject>
</IdeaExperienceCapacities>
