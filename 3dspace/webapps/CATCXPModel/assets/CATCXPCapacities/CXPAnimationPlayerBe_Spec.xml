<?xml version="1.0" encoding="UTF-8"?>
<IdeaExperienceCapacities>
	<Header>
		<Version>0.1</Version>
	</Header>
	<ExperienceObject>
		<CXPFunction id="play" body="play" returnValue="Boolean">
			<Variable name="productAnimation" type="Object" restrictiveTypes="CXPProductAnimation_Spec"/>
			<NaturalLanguageInfo capacityType="DriverState" alias="plays animation" icon="icons/caps/I_CXPPlayerPlay.png" exposedVariable="productAnimation"/>
		</CXPFunction>

		<CXPFunction id="pause" body="pause" returnValue="Boolean">
			<Variable name="productAnimation" type="Object" restrictiveTypes="CXPProductAnimation_Spec"/>
			<NaturalLanguageInfo capacityType="DriverState" alias="pauses animation" icon="icons/caps/I_CXPPlayerPause.png" exposedVariable="productAnimation"/>
		</CXPFunction>

		<CXPFunction id="resume" body="resume" returnValue="Boolean">
			<Variable name="productAnimation" type="Object" restrictiveTypes="CXPProductAnimation_Spec"/>
			<NaturalLanguageInfo capacityType="DriverState" alias="resumes animation" icon="icons/20px/I_CXPResumesAnimation.png" exposedVariable="productAnimation"/>
		</CXPFunction>

		<CXPFunction id="stop" body="stop" returnValue="Boolean">
			<Variable name="productAnimation" type="Object" restrictiveTypes="CXPProductAnimation_Spec"/>
			<NaturalLanguageInfo capacityType="DriverState" alias="stops animation" icon="icons/caps/I_CXPPlayerStop.png" exposedVariable="productAnimation"/>
		</CXPFunction>

		<CXPFunction id="isPlaying" body="isPlaying" returnValue="Boolean">
			<Variable name="productAnimation" type="Object" restrictiveTypes="CXPProductAnimation_Spec"/>
			<NaturalLanguageInfo capacityType="SensorState" alias="is playing animation" icon="icons/caps/?" exposedVariable="productAnimation"/>
		</CXPFunction>

		<CXPFunction id="isPaused" body="isPaused" returnValue="Boolean">
			<Variable name="productAnimation" type="Object" restrictiveTypes="CXPProductAnimation_Spec"/>
			<NaturalLanguageInfo capacityType="SensorState" alias="is paused animation" icon="icons/caps/?" exposedVariable="productAnimation"/>
		</CXPFunction>

		<CXPFunction id="isStopped" body="isStopped" returnValue="Boolean">
			<Variable name="productAnimation" type="Object" restrictiveTypes="CXPProductAnimation_Spec"/>
			<NaturalLanguageInfo capacityType="SensorState" alias="is stopped animation" icon="icons/caps/?" exposedVariable="productAnimation"/>
		</CXPFunction>

		<CXPEvent id="AnimationStartedEvent" targetParam="animation">
			<Variable name="productAnimation" type="Object" restrictiveTypes="CXPProductAnimation_Spec"/>
			<NaturalLanguageInfo capacityType="SensorEvent" alias="has started animation" icon="icons/caps/?" exposedVariable="productAnimation"/>
		</CXPEvent>

		<CXPEvent id="AnimationPausedEvent" targetParam="animation">
			<Variable name="productAnimation" type="Object" restrictiveTypes="CXPProductAnimation_Spec"/>
			<NaturalLanguageInfo capacityType="SensorEvent" alias="has paused animation" icon="icons/caps/?" exposedVariable="productAnimation"/>
		</CXPEvent>	

		<CXPEvent id="AnimationStoppedEvent" targetParam="animation">
			<Variable name="productAnimation" type="Object" restrictiveTypes="CXPProductAnimation_Spec"/>
			<NaturalLanguageInfo capacityType="SensorEvent" alias="has stopped animation" icon="icons/caps/?" exposedVariable="productAnimation"/>
		</CXPEvent>		

		<CXPEvent id="AnimationResumedEvent" targetParam="animation">
			<Variable name="productAnimation" type="Object" restrictiveTypes="CXPProductAnimation_Spec"/>
			<NaturalLanguageInfo capacityType="SensorEvent" alias="has resumed animation" icon="icons/caps/?" exposedVariable="productAnimation"/>
		</CXPEvent>	
		
		<CXPEvent id="AnimationFinishedEvent" targetParam="animation">
			<Variable name="productAnimation" type="Object" restrictiveTypes="CXPProductAnimation_Spec"/>
			<NaturalLanguageInfo capacityType="SensorEvent" alias="has finished animation" icon="icons/caps/?" exposedVariable="productAnimation"/>
		</CXPEvent>
	</ExperienceObject>
</IdeaExperienceCapacities>
 

