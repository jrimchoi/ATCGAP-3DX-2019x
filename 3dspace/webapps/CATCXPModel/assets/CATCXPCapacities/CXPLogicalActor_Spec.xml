<?xml version="1.0" encoding="UTF-8"?>
<IdeaExperienceCapacities>
  <Header>
    <Version>0.1</Version>
  </Header>

  <ExperienceObject>

    <CXPFunction id="isActive" body="isActive" returnValue="Boolean">
      <NaturalLanguageInfo capacityType="SensorState" alias="is active" icon="icons/caps/I_CXPActivate.png"/>
    </CXPFunction>

    <CXPFunction id="activate" body="activate" returnValue="Boolean">
      <NaturalLanguageInfo capacityType="DriverState" alias="activates" icon="icons/caps/I_CXPActivate.png"/>
    </CXPFunction>

    <CXPFunction id="deactivate" body="deactivate" returnValue="Boolean">
      <NaturalLanguageInfo capacityType="DriverState" alias="deactivates" icon="icons/caps/I_CXPDeactivate.png"/>
    </CXPFunction>

    <CXPFunction id="isInCollection" body="isInCollection" returnValue="Boolean">
      <Variable name="collection" type="Object" restrictiveTypes="CXPCollection_Spec"/>
      <NaturalLanguageInfo capacityType="SensorState" alias="belongs to" icon="icons/20px/I_CXPBelongsToCollection.png" exposedVariable="collection"/>
    </CXPFunction>

    <CXPFunction id="removeFromCollection" body="removeFromCollection" returnValue="Boolean">
      <Variable name="collection" type="Object" restrictiveTypes="CXPCollection_Spec"/>
      <NaturalLanguageInfo capacityType="DriverState" alias="removes from" icon="icons/20px/I_CXPRemovesToCollection.png" exposedVariable="collection"/>
    </CXPFunction>

    <CXPFunction id="addToCollection" body="addToCollection" returnValue="Boolean">
      <Variable name="collection" type="Object" restrictiveTypes="CXPCollection_Spec"/>
      <NaturalLanguageInfo capacityType="DriverState" alias="add to" icon="icons/20px/I_CXPAddsToCollection.png" exposedVariable="collection"/>
    </CXPFunction>

  </ExperienceObject>
</IdeaExperienceCapacities>
